<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="FurnitureWithQualityBase">
		<defName>O21_RegicideTable</defName>
		<label>regicide table</label>
		<description>Regicide is a human tabletop game played across the Imperium of Man. It uses a board and pieces or can be played using a virtual holographic display. It is similar to the ancient Terran game of chess, and can be played on a "hooded" board where only certain pieces are visible, making the game more complex. It trains intellectual skills.</description>
		<pathCost>50</pathCost>
		<passability>PassThroughOnly</passability>
		<designationCategory>Joy</designationCategory>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>false</rotatable>
		<socialPropernessMatters>true</socialPropernessMatters>
		<fillPercent>0.40</fillPercent>
		<minTechLevelToBuild>Medieval</minTechLevelToBuild>
		
		<graphicData>
			<texPath>Things/Building/Joy/Regicide</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.65, 0.25, 0.6)</volume>
				<offset>(0, 0, -0.15)</offset>
			</shadowData>
			<damageData>
				<rect>(0.09375,0.296875,0.796875,0.703125)</rect>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>8000</WorkToBuild>
			<Mass>5</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>4</Beauty>
			<JoyGainFactor>1</JoyGainFactor>
		</statBases>
		
		<building>
			<joyKind>Gaming_Cerebral</joyKind>
		</building>
		
		<comps>
			<li Class="CompProperties_RoomIdentifier">
				<roomStat>Impressiveness</roomStat>
			</li>
		</comps>
		
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>70</costStuffCount>
		
		<researchPrerequisites>
			<li>O21_Imp_Research</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef ParentName="FurnitureWithQualityBase">
		<defName>O21_ParadoxPokerTable</defName>
		<label>paradox poker table</label>
		<description>Every Saturday night, without fail, the Emperor, Tzeentch, Cegorach and the Deceiver get together with drinks and snacks and sit down to enjoy another thrilling game of paradox poker.</description>
		<rotatable>false</rotatable>
		<altitudeLayer>Building</altitudeLayer>
		<socialPropernessMatters>true</socialPropernessMatters>
		<fillPercent>0.40</fillPercent>
		<size>(2,2)</size>
		<pathCost>70</pathCost>
		<passability>PassThroughOnly</passability>
		<designationCategory>Joy</designationCategory>
		<canOverlapZones>false</canOverlapZones>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<uiIconScale>0.9</uiIconScale>
		
		<graphicData>
			<texPath>Things/Building/Joy/ParadoxPoker</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(4,4)</drawSize>
			<shadowData>
				<volume>(1.6, 0.3, 1.6)</volume>
				<offset>(0, 0, -0.15)</offset>
			</shadowData>
		</graphicData>
		
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>10000</WorkToBuild>
			<Mass>120</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>0</Beauty>
			<JoyGainFactor>1.3</JoyGainFactor>
		</statBases>
		
		<building>
			<joyKind>Gaming_Cerebral</joyKind>
		</building>
		
		<comps>
			<li Class="CompProperties_RoomIdentifier">
				<roomStat>Impressiveness</roomStat>
			</li>
		</comps>
		
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<costList>
			<Cloth>50</Cloth>
			<WoodLog>25</WoodLog>
		</costList>
		<researchPrerequisites>
			<li>O21_Imp_Research</li>
		</researchPrerequisites>
	</ThingDef>

</Defs>