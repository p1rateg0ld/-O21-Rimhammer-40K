<Defs>

	<ThingDef Name="NecronLamp">
		<defName>NecronFloorLamp_Green</defName>
		<label>necron floor lamp (green)</label>
		<description>Glowing green floor panel of Necrodermis.</description>
		<thingClass>Building</thingClass>
        <building>
            <ai_chillDestination>false</ai_chillDestination>
            <isInert>true</isInert>
            <isEdifice>false</isEdifice>
        </building>
		<graphicData>
			<texPath>Things/Necron/Building/Lighting/FloorLampGreen</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<category>Building</category>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Floor</altitudeLayer>
		<passability>Standable</passability>
		<selectable>true</selectable>
		<fillPercent>0.0</fillPercent>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<designationCategory>Furniture</designationCategory>
		<rotatable>false</rotatable>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
		<costList>
			<Necrodermis>20</Necrodermis>
		</costList>
		<statBases>
			<Mass>4</Mass>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToBuild>300</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<comps>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>30</basePowerConsumption>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>12</glowRadius>
				<glowColor>(0, 255, 0, 0)</glowColor>
			</li>
		</comps>
		<designatorDropdown>RH_NecronFloorLamp</designatorDropdown>
		<researchPrerequisites Inherit="false">
			<li>O21_Nec_Research</li>
		</researchPrerequisites>
	</ThingDef>

