<Defs>

	<ThingDef ParentName="PowerConduit">
		<defName>GaussConduit</defName>
		<label>gauss conduit</label>
		<description>Necron gauss conduit, for transferring power. Being covered in Necrodermis means this cable is just as durable as the rest of their constructions.</description>
		<graphicData>
			<texPath>Things/Necron/Building/GaussConduitUnlit_Atlas</texPath>
		</graphicData>
		<uiIconPath>Things/Necron/Building/GaussConduitUnlit_MenuIcon</uiIconPath>
		<statBases>
			<MaxHitPoints>800</MaxHitPoints>
			<WorkToBuild>50</WorkToBuild>
			<Flammability>0</Flammability>
			<Beauty>0</Beauty>
		</statBases>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<costList Inherit="false">
			<Necrodermis>1</Necrodermis>
		</costList>
		<designatorDropdown>RH_NecPowerConnectors</designatorDropdown>
		<researchPrerequisites Inherit="false">
			<li>N17_Nec_Research</li>
		</researchPrerequisites>
	</ThingDef>

