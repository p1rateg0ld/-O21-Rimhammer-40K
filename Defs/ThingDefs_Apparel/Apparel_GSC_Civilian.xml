<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ========== Clothing ========== -->
	
	<ThingDef ParentName="CadianUniformBase">
		<defName>GSCMiningUndersuitA</defName>
		<label>mining bodysuit (a)</label>
		<description>A full bodysuit civilian miners often wear, typically under their protective armor.</description>
		<graphicData>
			<texPath>Things/Imperium/Apparel/Body/BodysuitA</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<equippedStatOffsets>
			<ToxicSensitivity>-0.20</ToxicSensitivity>
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>ICApparel</li>
		</thingCategories>
		<apparel Inherit="False">
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Imperium/Apparel/Body/BodysuitA</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
		    	<li>ICApparel</li>
				<li>GSCApparel</li>
			</tags>
		</apparel>
		<comps>
			<li Class="O21Toolbox.ApparelRestrict.CompProperties_BodyRestrict">
				<compClass>O21Toolbox.ApparelRestrict.Comp_BodyRestrict</compClass>
				<BodyDefs>
					<li>Male</li>
					<li>Female</li>
				</BodyDefs>
			</li>
		</comps>
	</ThingDef>
	
