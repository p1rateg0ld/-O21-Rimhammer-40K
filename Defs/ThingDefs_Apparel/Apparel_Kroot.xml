<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ====== Armors ====== -->
	
	<ThingDef ParentName="ApparelMakeableBase"> <!-- Kroot Leathers -->
		<defName>KrootLeathers</defName>
		<label>kroot leathers</label>
		<description>A full-body covering for Kroot.</description>
		<graphicData>
			<texPath>Things/Kroot/Apparel/Racial/leather_bottom</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<costStuffCount>60</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1800</WorkToMake>
			<Mass>0.4</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<thingCategories>
			<li>TauApparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Kroot/Apparel/Racial/leather_bottom</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>TauApparel</li>
				<li>KrootApparel</li>
			</tags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>N17_Tau_Allies_KrootApparel</researchPrerequisite>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.4,0.3,0.15)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>(0.6,0.45,0.18)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>(0.8,0.6,0.23)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
	
	<ThingDef ParentName="ApparelMakeableBase"> <!-- Kroot Cloak -->
		<defName>KrootCloak</defName>
		<label>kroot cloak</label>
		<description>A cloak to help protect in cold temperatures.</description>
		<graphicData>
			<texPath>Things/Kroot/Apparel/Racial/cloak_outer</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
			<WorkToMake>8000</WorkToMake>
			<Mass>3.8</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>2.00</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.00</StuffEffectMultiplierInsulation_Heat>
