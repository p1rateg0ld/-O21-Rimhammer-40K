	<ThingDef ParentName="ApparelMakeableBase"> <!-- Kroot Heavy Armor -->
		<defName>KrootHeavyArmour</defName>
		<label>kroot armor</label>
		<description>Sturdy leather armour, covers most of their body, protects from heavy hits.</description>
		<graphicData>
			<texPath>Things/Kroot/Apparel/Racial/leather_middle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<costStuffCount>150</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToMake>38000</WorkToMake>
			<Mass>0.4</Mass>
			<StuffEffectMultiplierArmor>0.79</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>15</EquipDelay>
		</statBases>
		<thingCategories>
			<li>TauApparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Kroot/Apparel/Racial/leather_middle</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>TauApparel</li>
				<li>KrootApparel</li>
			</tags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>N17_Tau_Allies_KrootApparel</researchPrerequisite>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
				</recipeUsers>
				<skillRequirements>
					<Crafting>6</Crafting>
				</skillRequirements>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.4,0.3,0.15)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>(0.6,0.45,0.18)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>(0.8,0.6,0.23)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
	
	<ThingDef ParentName="ArmorSmithableBase" Name="KootTrustedArmorBase"> <!-- Tau Combat Armour -->
		<defName>KrootTrustedArmour</defName>
		<label>kroot trusted armor (t'au)</label>
		<techLevel>Spacer</techLevel>
		<description>This armour is only given to the most loyal among the Kroot, as a sign of trust between them and the Tau.</description>
		<graphicData>
			<texPath>Things/Kroot/Apparel/T'au/T'auKrootTrusted</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>N17_Tau_Allies_KrootTrusted</researchPrerequisite>
		</recipeMaker>
		<costList>
			<Steel>8</Steel>
			<Plasteel>120</Plasteel>
			<ComponentIndustrial>12</ComponentIndustrial>
		</costList>
		<statBases>
			<Mass>10</Mass>
			<WorkToMake>159000</WorkToMake>
			<MaxHitPoints>500</MaxHitPoints>
			<MarketValue>2000</MarketValue>
			<ArmorRating_Blunt>0.35</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.72</ArmorRating_Sharp>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Insulation_Cold>45</Insulation_Cold>
			<Insulation_Heat>45</Insulation_Heat>
		</statBases>
		<thingCategories>
			<li>TauApparel</li>
		</thingCategories>
		<apparel>
			<tags>
				<li>TauApparel</li>
				<li>KrootApparel</li>
			</tags>
			<wornGraphicPath>Things/Kroot/Apparel/T'au/T'auKrootTrusted</wornGraphicPath>
			<layers>
			    <li>Middle</li>
			    <li>Shell</li>
			</layers>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>
	
	<ThingDef ParentName="KootTrustedArmorBase"> <!-- Tau Combat Armour -->
		<defName>KrootTrustedArmourSacea</defName>
		<label>kroot trusted armor (sa'cea)</label>
		<graphicData>
			<texPath>Things/Kroot/Apparel/Sa'cea/Sa'ceaKrootTrustedArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<apparel>
			<tags Inherit="false">
				<li>TauApparel</li>
				<li>KrootSaceaApparel</li>
			</tags>
			<wornGraphicPath>Things/Kroot/Apparel/Sa'cea/Sa'ceaKrootTrustedArmor</wornGraphicPath>
		</apparel>
	</ThingDef>

</Defs>