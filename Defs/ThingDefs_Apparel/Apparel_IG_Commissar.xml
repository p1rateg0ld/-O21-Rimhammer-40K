<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ====== Clothing ====== -->
	
	<ThingDef ParentName="ApparelMakeableBase" Name="CommissarUniform"> <!-- Cadian Uniform -->
		<defName>CommissarUniform</defName>
		<label>Commissar Uniform</label>
		<description>A full-body uniform for the Commissary, includes a layer of armour equivalent to standard issue Imperial Guard gear.</description>
		<graphicData>
			<texPath>Things/Imperial Guard/Commissar/Commissar</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Spacer</techLevel>
		<costList>
			<Cloth>120</Cloth>
			<CeramiteMedGrade>40</CeramiteMedGrade>
		</costList>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>600</MaxHitPoints>
			<WorkToMake>38000</WorkToMake>
			<MarketValue>1000</MarketValue>
			<Mass>1</Mass>
			<ArmorRating_Sharp>1.00</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.46</ArmorRating_Blunt>
			<ArmorRating_Heat>0.27</ArmorRating_Heat>
			<Insulation_Cold>25</Insulation_Cold>
			<Insulation_Heat>25</Insulation_Heat>
			<EquipDelay>2.0</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>0.20</SocialImpact>
		</equippedStatOffsets>
		<thingCategories>
			<li>IGApparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Imperial Guard/Commissar/Commissar</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>ImperialGuardApparel</li>
				<li>CommissarApparel</li>
			</tags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<researchPrerequisite>N17_Imp_IGAdvancedArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>
	
