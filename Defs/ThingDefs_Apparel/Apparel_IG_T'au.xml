<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ====== Clothing ====== -->
	
	<ThingDef ParentName="CadianUniformBase"> <!-- Cadian Uniform -->
		<defName>GuevesaUniform</defName>
		<label>gue'vesa uniform</label>
		<description>A full-body uniform the Gue'vesa most often wear, typically under their armor.</description>
		<graphicData>
			<texPath>Things/Imperial Guard/Gue'vesa/Fatigues/TauFatigues</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<thingCategories Inherit="false">
			<li>TauApparel</li>
		</thingCategories>
		<apparel>
			<wornGraphicPath>Things/Imperial Guard/Gue'vesa/Fatigues/TauFatigues</wornGraphicPath>
			<tags Inherit="false">
				<li>TauApparel</li>
				<li>T'auGuevesaApparel</li>
			</tags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>N17_Tau_Allies_HumanApparel</researchPrerequisite>
		</recipeMaker>
	</ThingDef>
	
	<!-- ====== Armors ====== -->
	
	<ThingDef ParentName="CadianArmorBase"> <!-- Cadian Armour -->
		<defName>GuevesaArmor</defName>
		<label>gue'vesa armor</label>
		<description>The armor commonly worn by the Tau Gue'vesa.</description>
		<graphicData>
			<texPath>Things/Imperial Guard/T'au/Armour/T'auHumanArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<thingCategories Inherit="false">
			<li>TauApparel</li>
		</thingCategories>
		<apparel>
			<tags Inherit="false">
				<li>TauApparel</li>
				<li>T'auGuevesaApparel</li>
			</tags>
			<wornGraphicPath>Things/Imperial Guard/T'au/Armour/T'auHumanArmor</wornGraphicPath>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>N17_Tau_Allies_HumanApparel</researchPrerequisite>
		</recipeMaker>
	</ThingDef>
	
	<!-- ====== Helmets ====== -->

	<ThingDef ParentName="CadianHelmet"><!-- Cadian Helmet -->
		<defName>GuevesaHelmet</defName>
		<label>gue'vesa helmet</label>
		<description>The helmet commonly worn by the Tau Gue'vesa.</description>
		<graphicData> 
			<texPath>Things/Imperial Guard/T'au/Hats/T'auHumanHelmet</texPath>
			<graphicClass>Graphic_Single</graphicClass> 
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<thingCategories Inherit="false">
			<li>TauApparel</li>
		</thingCategories>
		<apparel>
    		<tags Inherit="false">
				<li>TauApparel</li>
				<li>T'auGuevesaApparel</li>
			</tags>
			<wornGraphicPath>Things/Imperial Guard/T'au/Hats/T'auHumanHelmet</wornGraphicPath>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>N17_Tau_Allies_HumanApparel</researchPrerequisite>
		</recipeMaker>
	</ThingDef>

</Defs>