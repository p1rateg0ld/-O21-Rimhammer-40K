<Defs>

	<!-- ====== Clothing ====== -->
	
	<ThingDef ParentName="CadianUniformBase"> <!-- Cadian Uniform -->
		<defName>GuevesaUniformSacea</defName>
		<label>gue'vesa uniform (sa'cea)</label>
		<description>A full-body uniform the Gue'vesa most often wear, typically under their armor.</description>
		<graphicData>
			<texPath>Things/Imperial Guard/Gue'vesa/Fatigues/TauFatigues</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<thingCategories Inherit="false">
			<li>TauApparel</li>
		</thingCategories>
		<apparel>
			<wornGraphicPath>Things/Imperial Guard/Gue'vesa/Fatigues/TauFatigues</wornGraphicPath>
			<tags Inherit="false">
				<li>TauApparel</li>
				<li>Sa'ceaGuevesaApparel</li>
			</tags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>N17_Tau_Allies_HumanApparel</researchPrerequisite>
		</recipeMaker>
	</ThingDef>
	
