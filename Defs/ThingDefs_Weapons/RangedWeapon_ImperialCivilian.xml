			<texPath>Things/Imperium/Weapons/Ranged/MiningLaser</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.3</drawSize>	
		</graphicData>
		<comps>
			<li>
				<compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
